{
	"extends": "./tsconfig.json", // Inherit from the main tsconfig
	"compilerOptions": {
		"module": "CommonJS", // Jest needs CommonJS
		"moduleResolution": "node", // Use Node-style module resolution
		"target": "ES6", // Target ES6 for Jest
		"esModuleInterop": true, // Ensure compatibility with ES6 imports
		"jsx": "react" // Optional: if you are using React components
	},
	"include": ["**/*.ts", "**/*.tsx", "__tests__/**/*"]
}
